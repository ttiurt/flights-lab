<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/meals/new.css" />
<%- include('../partials/nav') %>

<main>
	<h1><%= title %></h1>
  <p>Please first ensure that the meal is not in the dropdown
    <select>
      <% meals.forEach(function(meal) { %>
        <option><%= meal.name %></option>
      <% }) %>
    </select>
  </p>
  <form id="add-food-form" action="/meals" method="POST">
    <label for="food-input">Food:</label>
    <input type="text" name="food" id="food-input">
    <button type="submit">Add Meal</button>
  </form>
</main>

